<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">

    <persistence-unit name="Cy-j2eePU">

    <class>com.model.Test</class>
    <class>com.model.Employe</class>
    <class>com.model.Departement</class>
    <class>com.model.Projet</class>
    <class>com.model.SalaireEmployeDate</class>
    <class>com.model.SalaireExtra</class>
    <class>com.model.Role</class>
    <class>com.model.Participer</class>
    <class>com.model.ParticiperId</class>
    <class>com.model.Recevoir</class>
    <class>com.model.RecevoirId</class>
    <class>com.model.Obtenir</class>
    <class>com.model.ObtenirId</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cy_j2ee_db?serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
